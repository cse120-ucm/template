{
  "name": "cse120-github-workshop",
  "image": "mcr.microsoft.com/devcontainers/python:3.13",
  "features": {
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/devcontainers/features/docker-in-docker:2": {}
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "tamasfe.even-better-toml",
        "github.vscode-github-actions"
      ]
    }
  },
  "postCreateCommand": "pip install --upgrade pip uv && uv pip install . && uv pip install .[dev] || pip install -e .[dev] && pytest -q || true",
  "forwardPorts": [8000],
  "portsAttributes": {
    "8000": {"label": "App", "onAutoForward": "openBrowser"}
  },
  "remoteEnv": {
    "PYTHONUNBUFFERED": "1"
  }
}
